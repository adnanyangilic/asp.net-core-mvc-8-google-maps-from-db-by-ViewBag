                    position: new google.maps.LatLng(myLatLong),
                    map: map,
                });




                axios.post('api/LocationsAPI', {
                    name: "nice",
                    description: "good",
                    latitude: lat,
                    longitude: long,

                })
                    .then(function (response) {
                        console.log(response);
                    })
                    .catch(function (error) {
